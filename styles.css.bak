body {
  font-family: 'Arial';
  background-color: #f7f9fc;
  color: #333;
  margin: 0;
  padding: 40px;
}

.resume-container {
  max-width: 900px;
  background-color: #fff;
  margin: auto;
  padding: 40px;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}

h1 {
  font-size: 24px;
  margin-bottom: 10px;
  text-align: center;
}

h2 {
  border-bottom: 2px solid #000000;
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 18px;
  text-transform: uppercase;
}

h3 {
  margin: 0;
  font-size: 15px;
}

h4 {
    margin: 0;
    font-weight: lighter;
    font-size: 15px;
}

span {
    font-size: 15px;
}

.job-header {
  display: flex;
  justify-content: space-between;
  font-weight: bold;
}

.job-subheader {
  display: flex;
  font-style: italic;
  justify-content: space-between;
  margin-top: 5px;
  font-size: 14px;
}

ul {
  padding-left: 20px;
  font-size: 14px;
  margin-top: 5px;
}

a {
  color: #0073e6;
  text-decoration: none;
}

.section {
  margin-top: 30px;
}

.cert-style{
  display: flex;
  margin-top: 0px;
  font-size: 14px;
}
